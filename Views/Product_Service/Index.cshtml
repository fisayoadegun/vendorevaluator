@model IEnumerable<GMTVendorEvaluationWebApp.Models.EvaluationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products/Services</h1>

<p>
    <a asp-action="Create">Add New Product</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Date Delivered
            </th>
            <th>
                Vendor
            </th>
            <th>
                Deparment
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th>
                Grade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Delivered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)%
            </td>
            @{
                if (item.Percentage >= 80 && item.Percentage <= 100)
                {
                    <td>
                        GREAT
                    </td>
                }

                else if (item.Percentage >= 56 && item.Percentage <= 79)
                {
                    <td>
                        GOOD
                    </td>
                }

                else if (item.Percentage >= 46 && item.Percentage <= 55)
                {
                    <td>
                        WATCHLIST
                    </td>
                }
                else
                {
                    <td>
                        REPLACE
                    </td>
                }


            }

        <td>
            



            <div class="row">
                <div class="column" style="padding-left:5px">
                    @{
                        if (!item.Evaluated)
                        {
                            <a class="btn btn-light" asp-controller="Evaluation" asp-action="Create" asp-route-id="@item.product_id">Admin Evaluation</a>
                        }
                        else
                        {

                            <a class="btn btn-success btn-sm active" role="button" aria-pressed="true">Evaluated</a>
                        }
                    }

                    @{
                        if (!item.departmental_evaluation)
                        {
                            <a class="btn btn-light" style="padding-top:10px" asp-controller="Evaluation" asp-action="Edit" asp-route-id="@item.product_id"> Departmental Evaluation </a>
                        }
                    }
                </div>
                <div class="column" style="padding-left:5px;"><a class="btn btn-secondary btn-sm active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.product_id">Edit</a></div>
                <div class="column" style="padding-left:5px"><a class="btn btn-info btn-sm active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.product_id">Details</a> </div>
                <div class="column" style="padding-left: 5px;"><a class="btn btn-danger btn-sm active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.product_id">Delete</a></div>
            </div>

        </td>
        </tr>
}
    </tbody>
    
</table>
