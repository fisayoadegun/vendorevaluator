@model IEnumerable<GMTVendorEvaluationWebApp.Models.Evaluation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Criteria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Service.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Criteria.criteria_name)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.evaluationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.evaluationID">Details</a> |
