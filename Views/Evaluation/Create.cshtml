@model GMTVendorEvaluationWebApp.Models.Evaluation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Evaluation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_Service" class="control-label"></label>
                <select asp-for="product_serviceID" class="form-control" asp-items="ViewBag.product_serviceID">
                    <option value="">-- Select Product/Service --</option>
                </select>
                <span asp-validation-for="product_serviceID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Criteria" class="control-label"></label>
                <select asp-for="criteriaID" class="form-control" asp-items="ViewBag.criteriaID">
                    <option value="">-- Select Criteria --</option>
                </select>
                <span asp-validation-for="criteriaID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Grade>()">
                    <option>Select grade ...</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
