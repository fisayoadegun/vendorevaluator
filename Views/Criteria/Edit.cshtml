@model GMTVendorEvaluationWebApp.Models.Criteria

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        @{
            ViewData["Title"] = "Edit";
        }


        <h4>Edit Criteria</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="criteriaID" />
                    <div class="form-group">
                        <label asp-for="criteria_name" class="control-label"></label>
                        <input asp-for="criteria_name" class="form-control" />
                        <span asp-validation-for="criteria_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
</div>