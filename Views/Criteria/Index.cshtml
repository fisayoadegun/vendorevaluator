@model IEnumerable<GMTVendorEvaluationWebApp.Models.Criteria>

    
        @{
            ViewData["Title"] = "Index";
        }

        <h1>Criteria</h1>

        <p>
            <a asp-action="Create">Add New Criteria</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.criteria_name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.criteria_name)
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.criteriaID">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.criteriaID">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.criteriaID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
