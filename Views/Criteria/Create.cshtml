@model GMTVendorEvaluationWebApp.Models.Criteria

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        @{
            ViewData["Title"] = "Create";
        }



        <h4>Add New Criteria</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="criteria_name" class="control-label"></label>
                        <input asp-for="criteria_name" class="form-control" />
                        <span asp-validation-for="criteria_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Criteria" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>