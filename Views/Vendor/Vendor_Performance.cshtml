
@model IEnumerable<GMTVendorEvaluationWebApp.ViewModels.VendorEvaluation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Vendor_Performance";
}

<h1>Vendor Performance Evaluation</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Vendor Name
            </th>
            <th>
                Number of Product/Service Evaluated
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th>
                Grade

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfProducts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)%
            </td>

            @{

                if (item.Percentage >= 80 && item.Percentage <= 100)
                {
                    <td style="background-color:green; color: white;">
                        GREAT
                    </td>
                }

                else if (item.Percentage >= 56 && item.Percentage <= 79)
                {
                    <td style="background-color:blue; color:white;">
                        GOOD
                    </td>
                }

                else if (item.Percentage >= 46 && item.Percentage <= 55)
                {
                    <td style="background-color:gold; color:white;">
                        WATCHLIST
                    </td>
                }
                else if (item.NumberOfProducts == 0)
                {
                    <td>
                        Vendor yet to be evaluated
                    </td>
                }
                else
                {
                    <td style="background-color:indianred; color: white;">
                        REPLACE
                    </td>
                }
                <td>
                    <div class="btn btn-info" style="background-color:wheat">
                        @Html.ActionLink("View Products/Services", "Vendor_Check", new { vendorID = item.vendor_id })
                    </div>

                </td>

            }


        </tr>
        }
    </tbody>
</table>


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/js/Chart.min.js"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/css/bootstrap.min.css"></script>
    <style>
        /*#chart_container {
