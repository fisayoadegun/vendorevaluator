<html>
<head>
    <script src="~/js/Chart.min.js"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/css/bootstrap.min.css"></script>
    <style>
        #chart_container {
            width: 800px;
            height: 400px;
            border: 1px solid #ddd;
            padding: 1px;
            border-radius: 4px;
        }
    </style>
</head>



<body>
    <div id="chart_container">
        <canvas id="bar_chart">
        </canvas>
    </div>


    <script>
        var percentArray = @Html.Raw(Json.Serialize(ViewBag.PER));
        var vendors = @Html.Raw(Json.Serialize(ViewBag.VENDORS));
        var ctx = $("#bar_chart");
        var bar = new Chart(ctx, {
            type: "bar",
            data: {
                labels: vendors,
                datasets: [{
                    label: "Vendor Performance Evaluation",
                    data: percentArray,
                    backgroundColor: ["rgba(242,266,54)", "rgba(142,65,72)", "rgba(74,25,92)", "rgb(45,12,64)"],
                    borderColor: ["rgb(242,266,54)", "rgb(142,65,72)", "rgb(74,25,92)"],
                    borderWidth: 1
                }]

            },

            options: {
                mainAspectRatio: false,
                scales: { xAxes: [{ ticks: { beginAtZero: true } }] },
                legend: { display: false },
                plugins: {
                    title: {
                        display: true,
                        text: 'Custom Chart Title'
                    }
                }

            }

        });

    </script>
</body>



</html>