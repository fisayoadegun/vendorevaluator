        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.company_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact_person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type_of_business)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.vendorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.vendorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.vendorID">Delete</a>
