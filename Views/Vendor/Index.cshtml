@*@model IEnumerable<GMTVendorEvaluationWebApp.Models.Vendor>*@
@model  PaginatedList<GMTVendorEvaluationWebApp.Models.Vendor>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Vendors</h1>

<p>
    <a asp-action="Create">Add New Vendor</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search For Vendor: <input type="text" name="SearchString" value="@ViewData["VendorFilter"]" />
            <input type="submit" value="Search" class="btn btn-info" />
            <a asp-action="Index" class="btn btn-outline-success">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Contact Perdon
            </th>
            <th>
                Company Address
            </th>
            <th>
                Type of Business
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.company_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contact_person)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.company_address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type_of_business)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @*<button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button>
        <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
        <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>*@  
                    
                    <div class="row">
                        <div class="column" style="padding-left:5px;"><a class="btn btn-secondary btn-sm active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.vendorID">Edit</a></div>
                        <div class="column" style="padding-left:5px"><a class="btn btn-info btn-sm active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.vendorID">Details</a> </div>
                        <div class="column" style="padding-left: 5px; padding-top: 10px;"><a class="btn btn-danger btn-sm active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.vendorID">Delete</a></div>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-vendorFilter="@ViewData["VendorFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-vendorFilter="@ViewData["VendorFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>