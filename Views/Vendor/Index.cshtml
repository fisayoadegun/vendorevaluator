@*@model IEnumerable<GMTVendorEvaluationWebApp.Models.Vendor>*@
@model PaginatedList<GMTVendorEvaluationWebApp.Models.Vendor>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        @{
            ViewData["Title"] = "Index";
        }        
            <h1>List of Vendors</h1>

            <p>
                <a asp-action="Create">Add New Vendor</a>
            </p>
            <p>
                <a asp-action="Vendor_Upload">Upload Vendor Data</a>
            </p>


            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search.." title="Type in a name">
            <hr />

            <table class="table table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>
                            Company Name
                        </th>
                        <th>
                            Contact Perdon
                        </th>
                        <th>
                            Company Address
                        </th>
                        <th>
                            Type of Business
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Email
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.company_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.contact_person)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.company_address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type_of_business)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone_number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <div class="column" style="padding-left:5px;"><a class="btn btn-secondary btn-sm active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.vendorID">Edit</a></div>
                                    <div class="column" style="padding-left:5px"><a class="btn btn-info btn-sm active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.vendorID">Details</a> </div>
                                    <div class="column" style="padding-left: 5px;"><a class="btn btn-danger btn-sm active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.vendorID">Delete</a></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-vendorFilter="@ViewData["VendorFilter"]"
               class="btn btn-default @prevDisabled">
                Previous
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-vendorFilter="@ViewData["VendorFilter"]"
               class="btn btn-default @nextDisabled">
                Next
            </a>
        </div>
        


        <script>
            function myFunction() {

                // Declare variables
                var input = document.getElementById("myInput");
                var filter = input.value.toUpperCase();
                var table = document.getElementById("myTable");
                var trs = table.tBodies[0].getElementsByTagName("tr");

                // Loop through first tbody's rows
                for (var i = 0; i < trs.length; i++) {

                    // define the row's cells
                    var tds = trs[i].getElementsByTagName("td");

                    // hide the row
                    trs[i].style.display = "none";

                    // loop through row cells
                    for (var i2 = 0; i2 < tds.length; i2++) {

                        // if there's a match
                        if (tds[i2].innerHTML.toUpperCase().indexOf(filter) > -1) {

                            // show the row
                            trs[i].style.display = "";

                            // skip to the next row
                            continue;

                        }
                    }
                }

            }
        </script>
